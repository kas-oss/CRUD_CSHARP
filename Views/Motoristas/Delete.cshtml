@model CRUD_CSHARP.Models.Motorista

@{
    ViewData["Title"] = "Excluir motorista";
}

<div class="card card-danger">
    <div class="card-header">
        <h3 class="card-title">Confirmar exclusao</h3>
    </div>
    <div class="card-body">
        <p>Tem certeza que deseja excluir este motorista?</p>
        <dl class="row">
            <dt class="col-sm-3">Nome</dt>
            <dd class="col-sm-9">@Model.Nome</dd>

            <dt class="col-sm-3">CPF</dt>
            <dd class="col-sm-9">@Model.Cpf</dd>

            <dt class="col-sm-3">CNH</dt>
            <dd class="col-sm-9">@Model.Cnh</dd>

            <dt class="col-sm-3">Tipo de CNH</dt>
            <dd class="col-sm-9">@Model.TipoCnh</dd>
        </dl>
    </div>
    <div class="card-footer">
        <form asp-action="Delete" method="post" class="d-inline">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">Excluir</button>
        </form>
        <a class="btn btn-secondary" asp-action="Index">Cancelar</a>
    </div>
</div>
