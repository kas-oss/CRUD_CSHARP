@model CRUD_CSHARP.Models.Motoristas.Motorista

@{
    ViewData["Title"] = "Detalhes do motorista";
}

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Detalhes do motorista</h3>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Nome</dt>
            <dd class="col-sm-9">@Model.Nome</dd>

            <dt class="col-sm-3">CPF</dt>
            <dd class="col-sm-9">@Model.Cpf</dd>

            <dt class="col-sm-3">CNH</dt>
            <dd class="col-sm-9">@Model.Cnh</dd>

            <dt class="col-sm-3">Tipo de CNH</dt>
            <dd class="col-sm-9">@Model.TipoCnh</dd>

            <dt class="col-sm-3">Telefone</dt>
            <dd class="col-sm-9">@Model.Telefone</dd>

            <dt class="col-sm-3">Data de nascimento</dt>
            <dd class="col-sm-9">@Model.DataNascimento?.ToString("dd/MM/yyyy")</dd>
        </dl>
    </div>
    <div class="card-footer">
        <a class="btn btn-warning" asp-action="Edit" asp-route-id="@Model.Id">Editar</a>
        <a class="btn btn-secondary" asp-action="Index">Voltar</a>
    </div>
</div>
