@model CRUD_CSHARP.Models.Veiculo

@{
    ViewData["Title"] = "Excluir";
}

<h1>Excluir Veículo</h1>

<h3>Tem certeza que deseja excluir este veículo?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Modelo)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Modelo)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Placa)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Placa)</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Confirmar Exclusão" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>