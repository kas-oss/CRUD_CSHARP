@model CRUD_CSHARP.Models.Veiculo

@{
    ViewData["Title"] = "Excluir";
}

<h1>Excluir</h1>
<h3 class="text-danger">Tem certeza que deseja excluir este veículo?</h3>

<div>
    <h4>Veículo</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">@Html.DisplayNameFor(model => model.Marca)</dt>
        <dd class = "col-sm-10">@Html.DisplayFor(model => model.Marca)</dd>
        
        <dt class = "col-sm-2">@Html.DisplayNameFor(model => model.Modelo)</dt>
        <dd class = "col-sm-10">@Html.DisplayFor(model => model.Modelo)</dd>
        
        <dt class = "col-sm-2">@Html.DisplayNameFor(model => model.Placa)</dt>
        <dd class = "col-sm-10">@Html.DisplayFor(model => model.Placa)</dd>
        
        <dt class = "col-sm-2">@Html.DisplayNameFor(model => model.Ano)</dt>
        <dd class = "col-sm-10">@Html.DisplayFor(model => model.Ano)</dd>
        
        <dt class = "col-sm-2">@Html.DisplayNameFor(model => model.CapacidadeTanqueLitros)</dt>
        <dd class = "col-sm-10">@Html.DisplayFor(model => model.CapacidadeTanqueLitros)</dd>
        
        <dt class = "col-sm-2">@Html.DisplayNameFor(model => model.Combustivel)</dt>
        <dd class = "col-sm-10">@Html.DisplayFor(model => model.Combustivel)</dd>
        
        <dt class = "col-sm-2">@Html.DisplayNameFor(model => model.Categoria)</dt>
        <dd class = "col-sm-10">@Html.DisplayFor(model => model.Categoria)</dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Confirmar Exclusão" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Voltar</a>
    </form>
</div>