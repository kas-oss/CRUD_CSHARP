@model CRUD_CSHARP.Models.Veiculo

@{
    ViewData["Title"] = "Cadastrar Veículo";
}

<h1>Cadastrar</h1>
<h4>Veículo</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group mb-2">
                <label asp-for="Placa" class="control-label"></label>
                <input asp-for="Placa" class="form-control" />
                <span asp-validation-for="Placa" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="Marca" class="control-label"></label>
                <input asp-for="Marca" class="form-control" />
                <span asp-validation-for="Marca" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="Modelo" class="control-label"></label>
                <input asp-for="Modelo" class="form-control" />
                <span asp-validation-for="Modelo" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="Ano" class="control-label"></label>
                <input asp-for="Ano" class="form-control" />
                <span asp-validation-for="Ano" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="CapacidadeTanqueLitros" class="control-label"></label>
                <input asp-for="CapacidadeTanqueLitros" class="form-control" />
                <span asp-validation-for="CapacidadeTanqueLitros" class="text-danger"></span>
            </div>
             <div class="form-group mb-2">
                <label asp-for="Combustivel" class="control-label"></label>
                <select asp-for="Combustivel" asp-items="Html.GetEnumSelectList<CRUD_CSHARP.Models.TipoCombustivel>()" class="form-control"></select>
                <span asp-validation-for="Combustivel" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Categoria" class="control-label"></label>
                <select asp-for="Categoria" asp-items="Html.GetEnumSelectList<CRUD_CSHARP.Models.CategoriaVeiculo>()" class="form-control"></select>
                <span asp-validation-for="Categoria" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Voltar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}