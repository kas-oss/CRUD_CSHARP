@model IEnumerable<CRUD_CSHARP.Models.Veiculo>

@{
    ViewData["Title"] = "Veículos";
}

<h1>Veículos</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Novo Veículo</a>
</p>
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Placa)</th>
            <th>@Html.DisplayNameFor(model => model.Marca)</th>
            <th>@Html.DisplayNameFor(model => model.Modelo)</th>
            <th>@Html.DisplayNameFor(model => model.Ano)</th>
            <th>@Html.DisplayNameFor(model => model.CapacidadeTanqueLitros)</th>
            <th>@Html.DisplayNameFor(model => model.Combustivel)</th>
            <th>@Html.DisplayNameFor(model => model.Categoria)</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.Placa)</td>
            <td>@Html.DisplayFor(modelItem => item.Marca)</td>
            <td>@Html.DisplayFor(modelItem => item.Modelo)</td>
            <td>@Html.DisplayFor(modelItem => item.Ano)</td>
            <td>@Html.DisplayFor(modelItem => item.CapacidadeTanqueLitros)</td>
            <td>@Html.DisplayFor(modelItem => item.Combustivel)</td>
            <td>@Html.DisplayFor(modelItem => item.Categoria)</td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Excluir</a>
            </td>
        </tr>
}
    </tbody>
</table>