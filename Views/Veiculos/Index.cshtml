@model IEnumerable<CRUD_CSHARP.Models.Veiculo>

@{
    ViewData["Title"] = "Veículos";
}

@if (TempData["SuccessMessage"] != null){
    <div class="row justify-content-center mt-4">
        <div class="col-md-6">
            <div class="alert alert-success alert-dismissible fade show text-center shadow-sm" role="alert">
                <i class="bi bi-check-circle-fill me-2"></i> 
                @TempData["SuccessMessage"]
            </div>
        </div>
    </div>
}

<div class="container p-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Lista de veículos</h1>
        <a asp-action="Create" class="btn btn-primary">
            Novo Veículo
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info" role="alert">
            Nenhum veículo cadastrado. Clique em "Novo Veículo".
        </div>
    }
    else
    {
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Id)</th>
                    <th>@Html.DisplayNameFor(model => model.Modelo)</th>
                    <th>@Html.DisplayNameFor(model => model.Marca)</th>
                    <th>@Html.DisplayNameFor(model => model.Placa)</th>
                    <th>@Html.DisplayNameFor(model => model.Ano)</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Modelo</td>
                        <td>@item.Marca</td>
                        <td>@item.Placa</td>
                        <td>@item.Ano</td>
                        <td>
                            <div class="btn-group" role="group">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Editar</a>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Detalhes</a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Excluir</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Timer
            setTimeout(function () {
                
                $(".alert-success").fadeOut("slow", function () {
                    $(this).remove();
                });
            }, 3000); 
        });
    </script>
}