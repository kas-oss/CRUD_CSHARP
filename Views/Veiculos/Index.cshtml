@model IEnumerable<CRUD_CSHARP.Models.Veiculo>
@{
    ViewData["Title"] = "Veículos";
}

<div class="card">
    <div class="card-header d-flex align-items-center justify-content-between">
        <h3 class="card-title">Lista de veículos</h3>
        <a class="btn btn-primary btn-sm" asp-action="Create">Novo motorista</a>
    </div>
    <div class="card-body table-responsive p-0">
        <table class="table table-striped table-hover text-nowrap">
            <thead>
                <tr>
                    <th>Placa</th>
                    <th>Marca</th>
                    <th>Modelo</th>
                    <th>Ano</th>
                    <th>Combustível</th>
                    <th>Categoria</th>
                    <th style="width: 160px;">Ações</th>
                </tr>
            </thead>
            <tbody>
            @foreach (Veiculo item in Model)
            {
                <tr>
                    <td>@item.Placa</td>
                    <td>@item.Marca</td>
                    <td>@item.Modelo</td>
                    <td>@item.Ano</td>
                    <td>@item.Combustivel</td>
                    <td>@item.Categoria</td>
                    <td>
                        <a class="btn btn-info btn-xs" asp-action="Details" asp-route-id="@item.Id">Detalhes</a>
                        <a class="btn btn-warning btn-xs" asp-action="Edit" asp-route-id="@item.Id">Editar</a>
                        <a class="btn btn-danger btn-xs" asp-action="Delete" asp-route-id="@item.Id">Excluir</a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>
