@* Lista de veículos - IEnumerable permite iterar com foreach *@
@model IEnumerable<CRUD_CSHARP.Models.Veiculo>

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h3 class="card-title">Lista de Veículos</h3>
        <a asp-action="Create" class="btn btn-primary btn-sm">Novo Veículo</a>
    </div>
    
    <div class="card-body">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Placa</th>
                    <th>Marca</th>
                    <th>Modelo</th>
                    <th>Ano</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                @* Percorre cada veículo e cria uma linha na tabela *@
                @foreach (var item in Model) {
                    <tr>
                        <td>@item.Placa</td>
                        <td>@item.Marca</td>
                        <td>@item.Modelo</td>
                        <td>@item.Ano</td>
                        <td>
                            @* asp-route-id passa o Id na URL: /Veiculos/Details/1 *@
                            <a class="btn btn-info btn-xs" asp-action="Details" asp-route-id="@item.Id">Detalhes</a>
                            <a class="btn btn-warning btn-xs" asp-action="Edit" asp-route-id="@item.Id">Editar</a>
                            <a class="btn btn-danger btn-xs" asp-action="Delete" asp-route-id="@item.Id">Excluir</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>