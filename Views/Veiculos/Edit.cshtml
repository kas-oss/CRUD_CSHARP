@model CRUD_CSHARP.Models.Veiculo

<div class="card">
    <div class="card-header"><h3>Editar Veículo</h3></div>
    <div class="card-body">
        <form asp-action="Edit">
            @* Id oculto para identificar o registro *@
            <input type="hidden" asp-for="Id" />
            
            <div class="form-group mb-2">
                <label asp-for="Placa"></label>
                <input asp-for="Placa" class="form-control" />
                <span asp-validation-for="Placa" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-2">
                <label asp-for="Marca"></label>
                <input asp-for="Marca" class="form-control" />
                <span asp-validation-for="Marca" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-2">
                <label asp-for="Modelo"></label>
                <input asp-for="Modelo" class="form-control" />
                <span asp-validation-for="Modelo" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-2">
                <label asp-for="Ano"></label>
                <input asp-for="Ano" class="form-control" />
                <span asp-validation-for="Ano" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-2">
                <label asp-for="CapacidadeTanqueLitros"></label>
                <input asp-for="CapacidadeTanqueLitros" class="form-control" type="number" step="0.1" />
                <span asp-validation-for="CapacidadeTanqueLitros" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-2">
                <label asp-for="Combustivel"></label>
                <select asp-for="Combustivel" class="form-control" asp-items="Html.GetEnumSelectList<CRUD_CSHARP.Models.TipoCombustivel>()"></select>
                <span asp-validation-for="Combustivel" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="Categoria"></label>
                <select asp-for="Categoria" class="form-control" asp-items="Html.GetEnumSelectList<CRUD_CSHARP.Models.CategoriaVeiculo>()"></select>
                <span asp-validation-for="Categoria" class="text-danger"></span>
            </div>
            
            <button type="submit" class="btn btn-success">Salvar Alterações</button>
            <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}