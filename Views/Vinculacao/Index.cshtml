@model IEnumerable<CRUD_CSHARP.Models.Vinculacao>

@{
    ViewData["Title"] = "Vinculações";
}

<div class="card">
    <div class="card-header d-flex align-items-center justify-content-between">
        <h3 class="card-title">Lista de vinculações</h3>
        <a class="btn btn-primary btn-sm" asp-action="Create">Nova vinculação</a>
    </div>

    <div class="card-body table-responsive p-0">
        <table class="table table-striped table-hover text-nowrap">
            <thead>
                <tr>
                    <th>Motorista</th>
                    <th>Veículo</th>
                    <th>Início</th>
                    <th>Fim</th>
                    <th>KM Inicial</th>
                    <th>KM Final</th>
                    <th>Motivo</th>
                    <th>Observações</th>
                    <th style="width: 160px;">Ações</th>
                </tr>
            </thead>

            <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.MotoristaId</td>
                    <td>@item.VeiculoId</td>

                    <td>@item.DataHoraInicio.ToString("dd/MM/yyyy HH:mm")</td>

                    <td>
                        @if (item.DataHoraFim.HasValue)
                        {
                            @item.DataHoraFim.Value.ToString("dd/MM/yyyy HH:mm")
                        }
                        else
                        {
                            <span class="text-muted">Em uso</span>
                        }
                    </td>

                    <td>@item.QuilometragemInicial</td>

                    <td>
                        @if (item.QuilometragemFinal.HasValue)
                        {
                            @item.QuilometragemFinal
                        }
                        else
                        {
                            <span class="text-muted">—</span>
                        }
                    </td>

                    <td><span  title="@item.Motivo">@item.Motivo.Substring(0, Math.Min(10, @item.Motivo.Length))...</span></td>
                    <td><span  title="@item.Observacoes">@item.Observacoes?.Substring(0, Math.Min(10, @item.Observacoes?.Length ?? 0))...</span></td>

                    <td>
                        <a class="btn btn-info btn-xs" asp-action="Details" asp-route-id="@item.Id">Detalhes</a>
                        <a class="btn btn-warning btn-xs" asp-action="Edit" asp-route-id="@item.Id">Editar</a>
                        <a class="btn btn-danger btn-xs" asp-action="Delete" asp-route-id="@item.Id">Excluir</a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>
