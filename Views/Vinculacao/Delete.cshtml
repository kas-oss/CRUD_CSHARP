@model CRUD_CSHARP.Models.VinculacaoFullModel

@{
    ViewData["Title"] = "Excluir vinculação";
}

<div class="card card-danger">
    <div class="card-header">
        <h3 class="card-title">Confirmar exclusão</h3>
    </div>

    <div class="card-body">
        <p>Tem certeza que deseja excluir esta vinculação?</p>

        <dl class="row">

            <dt class="col-sm-3">Motorista</dt>
            <dd class="col-sm-9">
                @Model.Motorista.Nome
            </dd>

            <dt class="col-sm-3">Veículo</dt>
            <dd class="col-sm-9">
                @Model.Veiculo.Placa - @Model.Veiculo.Modelo
            </dd>

            <dt class="col-sm-3">Data e Hora de Início</dt>
            <dd class="col-sm-9">
                @Model.Vinculacao.DataHoraInicio
            </dd>

            <dt class="col-sm-3">Data e Hora de Fim</dt>
            <dd class="col-sm-9">
                @if (Model.Vinculacao.DataHoraFim.HasValue)
                {
                    @Model.Vinculacao.DataHoraFim.Value.ToString("dd/MM/yyyy HH:mm")
                }
                else
                {
                    <span class="text-muted">Em uso</span>
                }
            </dd>

            <dt class="col-sm-3">Quilometragem Inicial</dt>
            <dd class="col-sm-9">
                @Model.Vinculacao.QuilometragemInicial
            </dd>

            <dt class="col-sm-3">Quilometragem Final</dt>
            <dd class="col-sm-9">
                @if (Model.Vinculacao.QuilometragemFinal.HasValue)
                {
                    @Model.Vinculacao.QuilometragemFinal
                }
                else
                {
                    <span class="text-muted">—</span>
                }
            </dd>

            <dt class="col-sm-3">Motivo</dt>
            <dd class="col-sm-9">
                @Model.Vinculacao.Motivo
            </dd>

            <dt class="col-sm-3">Observações</dt>
            <dd class="col-sm-9">
                @Model.Vinculacao.Observacoes
            </dd>

        </dl>
    </div>

    <div class="card-footer">
        <form asp-action="Delete" method="post" class="d-inline">
            <input type="hidden" asp-for="Vinculacao.Id" />
            <button type="submit" class="btn btn-danger">Excluir</button>
        </form>

        <a class="btn btn-secondary" asp-action="Index">Cancelar</a>
    </div>
</div>
